{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "types",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "test",
    "scripts",
    "src/**/worker.cjs"
  ]
}
